<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corona_white"
    tools:context=".CountdownTimerFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView5"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/corona_blue">

            <TextView
                android:id="@+id/window_status_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center|center_vertical"
                android:text="@string/fenOffen"
                android:textColor="@color/corona_white"
                android:textSize="24sp" />
        </com.google.android.material.card.MaterialCardView>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container_lueftung"
            android:name="com.example.myapplication.TimerFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmet_container_abstand"
            android:name="com.example.myapplication.TimerFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

