<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewLueften"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lüftungserinnerungen"
            android:textSize="16sp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchLueften"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:checked="true"
            android:onClick="checkRadio"
            android:text="Erinnerungen aktiv" />

        <LinearLayout
            android:id="@+id/lueftungstime_clickable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Erinnerungsintervall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lueftungstime_clickable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15 Minuten" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lueftungsdauer_clickable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lüftungsdauer"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lueftungsdauer_clickable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 Minuten" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewAbstand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:text="Abstandserinnerungen" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchAbstand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:onClick="checkRadio"
            android:text="Erinnerungen aktiv" />

        <LinearLayout
            android:id="@+id/abstandstime_clickable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Erinnerungsintervall"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/abstandstime_clickable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15 Minuten" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/purple_500"
        android:onClick="openChecklistActivity"
        android:text="START"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>