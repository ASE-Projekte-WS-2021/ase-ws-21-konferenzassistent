<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingEnd="8dp">

    <ImageView
        android:id="@+id/onboarding_carousel_page_imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/onboarding_carousel_page_headline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_android" />

    <TextView
        android:id="@+id/onboarding_carousel_page_headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:lineSpacingExtra="32sp"
        android:text="@string/placeholder"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/onboarding_carousel_page_subhead"
        app:layout_constraintEnd_toEndOf="@+id/onboarding_carousel_page_imageView"
        app:layout_constraintStart_toStartOf="@+id/onboarding_carousel_page_imageView"
        app:lineHeight="32sp" />

    <TextView
        android:id="@+id/onboarding_carousel_page_subhead"
        android:layout_width="0dp"
        android:layout_height="108dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:lineSpacingExtra="24sp"
        android:text="@string/placeholder"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/onboarding_carousel_page_button_guideline"
        app:layout_constraintEnd_toEndOf="@+id/onboarding_carousel_page_imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/onboarding_carousel_page_imageView"
        app:lineHeight="32sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/onboarding_carousel_page_button_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="112dp" />

</androidx.constraintlayout.widget.ConstraintLayout>