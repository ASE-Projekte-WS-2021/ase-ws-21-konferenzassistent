<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/new_meeting_button"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@drawable/btn_default"
        android:onClick="openSettingsActivity"
        android:text="+"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="@android:color/white"
        app:useCompatPadding="true" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_Datum"
                android:layout_width="106dp"
                android:layout_height="26dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="15.Feb.2022"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_Uhrzeit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="10:30 - 13:30"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_Datum" />

            <TextView
                android:id="@+id/textView_Ort"
                android:layout_width="181dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Uni Regensburg"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView_Uhrzeit"
                app:layout_constraintTop_toBottomOf="@+id/Meeting_Thema" />

            <TextView
                android:id="@+id/Meeting_Thema"
                android:layout_width="274dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="Uni Regensburg blabla blabla Medien..."
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView_Datum"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_checkDetail1"
                android:layout_width="86dp"
                android:layout_height="43dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="0dp"
                android:onClick="openPastMeeting"
                android:text="details"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/textView_Ort"
                app:layout_constraintTop_toBottomOf="@+id/Meeting_Thema" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_Datum2"
                android:layout_width="106dp"
                android:layout_height="26dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="28.Feb.2022"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/textView_Ort2"
                android:layout_width="181dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Uni Regensburg"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="131dp"
                tools:layout_editor_absoluteY="50dp"
                app:layout_constraintStart_toEndOf="@+id/textView_Uhrzeit2"
                app:layout_constraintTop_toBottomOf="@+id/Meeting_Thema2"/>

            <TextView
                android:id="@+id/Meeting_Thema2"
                android:layout_width="274dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:text="Blabla Mathe sjknao..."
                tools:layout_editor_absoluteX="131dp"
                tools:layout_editor_absoluteY="16dp"
                app:layout_constraintStart_toEndOf="@+id/textView_Datum2"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/textView_Uhrzeit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="14:30 - 16:00"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_Datum2"/>

            <Button
                android:id="@+id/button_checkDetail2"
                android:layout_width="86dp"
                android:layout_height="43dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="0dp"
                android:text="Details"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="318dp"
                tools:layout_editor_absoluteY="42dp"
                app:layout_constraintStart_toEndOf="@+id/textView_Ort2"
                app:layout_constraintTop_toBottomOf="@+id/Meeting_Thema2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_Datum3"
                android:layout_width="106dp"
                android:layout_height="26dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="06.März.2022"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/textView_Ort3"
                android:layout_width="181dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="OTH"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="131dp"
                tools:layout_editor_absoluteY="50dp"
                app:layout_constraintStart_toEndOf="@+id/textView_Uhrzeit3"
                app:layout_constraintTop_toBottomOf="@+id/Meeting_Thema3"/>

            <TextView
                android:id="@+id/Meeting_Thema3"
                android:layout_width="274dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:text="Film Seminar..."
                tools:layout_editor_absoluteX="131dp"
                tools:layout_editor_absoluteY="16dp"
                app:layout_constraintStart_toEndOf="@+id/textView_Datum3"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/textView_Uhrzeit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="14:30 - 16:00"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_Datum3"/>

            <Button
                android:id="@+id/button_checkDetail3"
                android:layout_width="86dp"
                android:layout_height="43dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="0dp"
                android:text="Details"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="318dp"
                tools:layout_editor_absoluteY="42dp"
                app:layout_constraintStart_toEndOf="@+id/textView_Ort3"
                app:layout_constraintTop_toBottomOf="@+id/Meeting_Thema3"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/introText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Herzlich willkommen im Corona-Konferenz-Assistent. Wir unterstützen dich dabei, deine Meetings in Zeiten von Corona so sicher wie möglich abzuhalten. Klicke auf den “+”-Button, um ein Meeting hinzufügen!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.847"
        app:useCompatPadding="true" />


</androidx.constraintlayout.widget.ConstraintLayout>