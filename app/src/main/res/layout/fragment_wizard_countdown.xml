<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".meetingwizard.WizardCountdownFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Einf체hrungs text unter umst채nden"/>

        <!-- Recycle View f체r Countdowns -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/corona_white"
            android:layout_height="wrap_content">

            <!-- Countdown Template -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Countdown Header -->
                <LinearLayout
                    android:id="@+id/button_checklist_preset"
                    style="@style/Widget.AppCompat.Button"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:minHeight="42dp"
                    android:gravity="left"
                    android:background="@color/transparent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="L체ftungstimer"/>

                    <androidx.constraintlayout.widget.Placeholder
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/countdown_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:checked="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="16dp" />


                </LinearLayout>
                <!-- Countdown Container -->
                <LinearLayout
                    android:id="@+id/countdown_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_height="1dp"
                    android:background="#e6e6e6" />

                <!-- Time Picker -->
                    <com.example.myapplication.meetingwizard.CustomNumberPicker
                        android:id="@+id/wizard_number_picker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        max="59"
                        min="1"
                        android:divider="@color/corona_blue"/>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</layout >