<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChecklistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/startMeetingButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Switch
            android:id="@+id/switch1"
            android:layout_width="346dp"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="4dp"
            android:onClick="checkItem"
            android:text="Desinfektionsmittel bereit"
            android:textSize="15dp" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="346dp"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="4dp"
            android:onClick="checkItem"
            android:text="3G-Regelung o.ä. geprüft"
            android:textSize="15dp" />

        <Switch
            android:id="@+id/switch3"
            android:layout_width="346dp"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="4dp"
            android:onClick="checkItem"
            android:text="Masken / Plexiglas geprüft"
            android:textSize="15dp" />

        <Switch
            android:id="@+id/switch4"
            android:layout_width="346dp"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="4dp"
            android:onClick="checkItem"
            android:text="Abstände gewährleistet"
            android:textSize="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/startMeetingButton"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_default"
        android:onClick="openCountdownActivity"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Starte Meeting"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/disable_startMeetingButton"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_disable"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Starte Meeting"
        android:textColor="@color/dark_gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>